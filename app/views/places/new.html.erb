<div class="booyah-box col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-m-6 col-m-offset-3">
	<h2 style="text-align: center">Enter Your Place Details</h2>
	<br />
	<%= simple_form_for @place do |f| %>
		<%= f.input :name %>
		<%= f.input :address %>
		<%= f.input :description %>
		<br />
		<div class="pull-right">
			<%= link_to 'Nevermind', root_path, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-warning' %>
			<%= f.submit 'Create', :class => 'btn btn-primary' %>
		</div>
	<% end %>
</div>