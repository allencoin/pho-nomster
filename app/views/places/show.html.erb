	<div class="booyah-box col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-m-8 col-m-offset-2">
		<h1><%= @place.name %></h1>
		<em><%= @place.address %></em><br /><br />
		<p><%= @place.description %></p><br />

		<% if @place.latitude.present? && @place.longitude.present? %>
		  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
		  <script>
		    function initialize() {
		      var myLatlng = new google.maps.LatLng(<%= @place.latitude %>, <%= @place.longitude %>);
		      var mapOptions = {
		        zoom: 13,
		        center: myLatlng
		      };
		      var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

		      var marker = new google.maps.Marker({
		        position: myLatlng,
		        map: map,
		        title: 'Hello World!'
		      });
		    }

		    google.maps.event.addDomListener(window, 'load', initialize);

		  </script>

		  <div id="map-canvas"></div>
		<% end %>

		<br />

		<% if @place.user.present?%>
			<small>Submitted by: <%= @place.user.email %></small>
		<% end %>
		<div class="pull-right">
			<% if current_user && current_user == @place.user %>
				<%= link_to 'Edit', edit_place_path(@place), :class => 'btn btn-primary' %>
			<% end %>
		</div>
		<br /><br />
		<hr>
		<div class="clear"></div>
		<div class="collapse" id="addcomment">
		<%= simple_form_for @comment, :url => place_comments_path(@place) do |f| %>
			<%= f.input :message %>
			<%= f.input :rating, :as => :select, :collection => Comment::RATINGS %>
			<div class="text-center">
			<%= f.submit "Submit Comment", :class => 'btn btn-primary' %>
			</div>
		<% end %>
		<br /><br /><br />
		</div>
		<a class="btn btn-warning" data-toggle="collapse" data-target="#addcomment">Show/Hide Comment Form</a>
		<hr>
		<h2>Comments</h2>
		<br />
		<% @place.comments.each do |comment| %>
		<div>
			<blockquote>
				<% if comment.humanized_rating.present? %>
				<strong><%= comment.humanized_rating %></strong> -
				<% end %>
				<%= comment.message %>
				<small><%= comment.user.email %></small>
			</blockquote>
		</div>
		<% end %>
	</div>