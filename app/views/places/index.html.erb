<% @places.each do |place| %>
	<div class="booyah-box col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-m-8 col-m-offset-2">
		<h1><%= link_to place.name, place_path(place) %></h1>
		<em><%= place.address %></em><br /><br />
		<p><%= place.description %></p><br />

		<% if place.user.present?%>
			<small>Submitted by <%= place.user.email %></small>
		<% end %>
			<% if place.comments.present? %>
			<div class="col-xs-12">
				<br />
				<blockquote>
						<% if place.comments.last.humanized_rating.present? %>
					<strong><%= place.comments.last.humanized_rating %></strong> -
						<% end %>
						<%= place.comments.last.message %>
						<small><%= place.comments.last.user.email %></small>
				</blockquote>
			</div>
			<% end %>
		</div>
	<% end %>

<div class="pages_container col-xs-12">
<div class="pages">
<%= paginate @places, :theme => 'twitter-bootstrap-3' %>
</div>
</div>