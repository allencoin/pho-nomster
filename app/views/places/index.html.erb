<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <!-- <li data-target="#carousel-example-generic" data-slide-to="2"></li> -->
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
        Find the best phở places near you!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpg', :class => 'img-responsive' %>
      <div class="carousel-caption">
      	Looking for phở?
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<!-- </div> -->

<% @places.each do |place| %>
	<div class="booyah-box col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-m-8 col-m-offset-2">
		<h1><%= link_to place.name, place_path(place) %></h1>
		<em><%= place.address %></em><br /><br />
		<p><%= place.description %></p><br />

		<% if place.user.present?%>
			<small>Submitted by <%= place.user.email %></small>
		<% end %>
			<% if place.comments.present? %>
			<div class="col-xs-12">
				<br />
				<blockquote>
					<% if place.comments.last.rating.present? %>
						<% place.comments.last.rating.times do |i| %>
						<!-- can't get this to work -->
							<%= "★" %>
						<% end %> -
					<% end %>
					<%= place.comments.last.message %>
					<small><%= place.comments.last.user.email %></small>
				</blockquote>
			</div>
			<% end %>
		</div>
	<% end %>

<div class="pages_container col-xs-12">
<div class="pages">
<%= paginate @places, :theme => 'twitter-bootstrap-3' %>
</div>
</div>