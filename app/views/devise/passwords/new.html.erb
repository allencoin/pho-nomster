<div class="booyah-box col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-m-6 col-m-offset-3">
<div class="span7 text-center"><h2>Forgot your password?</h2></div>
<br />
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
  </div>
<br />
  <div class="span7 text-center">
    <div class="form-actions">
    <%= f.button :submit, "Send me password reset instructions", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
</div>
